* {
  border: none;
  border-radius: 10;
  font-family: "Iosevka";
  font-size: 14px;
}

#window,
#tags,
#network,
#bluetooth,
#pulseaudio,
#battery,
#backlight,
#clock,
#memory,
#cpu,
#tray,
#custom-power,
#custom-launcher {
  color: #161320;
  font-size: 14px;
  margin: 6px;
  padding: 4px 10px;
  border-radius: 10px;
  transition: none;
}

window#waybar {
  background: transparent;
}

window#waybar.hidden {
  opacity: 0.2;
}

#window {
  color: transparent;
  background: transparent;
}

#tags {
  background: #161320;
}

#tags button {
  transition: none;
  color: #b5e8e0;
  background: transparent;
  font-size: 14px;
  border-radius: 2px;
}

#tags button.occupied {
  transition: none;
  color: #f28fad;
  background: transparent;
  font-size: 4px;
}

#tags button.focused {
  color: #abe9b3;
  border-top: 2px solid #abe9b3;
  border-bottom: 2px solid #abe9b3;
}

#tags button:hover {
  transition: none;
  box-shadow: inherit;
  text-shadow: inherit;
  color: #fae3b0;
  border-color: #e8a2af;
  color: #e8a2af;
}

#tags button.focused:hover {
  color: #e8a2af;
}

#network {
  background: #bd93f9;
}

#bluetooth {
  background: #ffb86c;
}

#pulseaudio {
  background: #fae3b0;
}

#battery {
  background: #b5e8e0;
}

#battery.charging,
#battery.plugged {
  color: #161320;
  background-color: #b5e8e0;
}

#battery.critical:not(.charging) {
  background-color: #b5e8e0;
  color: #161320;
  animation-name: blink;
  animation-duration: 0.5s;
  animation-timing-function: linear;
  animation-iteration-count: infinite;
  animation-direction: alternate;
}

@keyframes blink {
  to {
    background-color: #bf616a;
    color: #b5e8e0;
  }
}

#backlight {
  border-radius: 10px;
  color: #161320;
  background: #f8bd96;
}

#clock {
  background: #abe9b3;
  /*background: #1A1826;*/
}

#memory {
  background: #ddb6f2;
}

#cpu {
  background: #96cdfb;
}

#tray {
  color: #b5e8e0;
  background: #161320;
}

#custom-launcher {
  color: #89dceb;
  background: #161320;
}

#custom-power {
  background: #f28fad;
}

#custom-wallpaper {
  background: #c9cbff;
}

#custom-updates {
  background: #e8a2af;
}

#custom-media {
  background: #f2cdcd;
}
